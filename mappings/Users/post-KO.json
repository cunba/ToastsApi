{
    "request": {
        "method": "POST",
        "url": "/users",
        "bodyPatterns":  [{
            "equalToJson": {
                "surname": "${json-unit.any-string}",
                "birth_date": "${json-unit.any-string}",
                "email": "${json-unit.any-string}",
                "password": "${json-unit.any-string}",
                "role": "USER"
            },
            "ignoreArrayOrder": true
        }]
    },
    "response": {
        "status": 400,
        "headers": {
            "Content-Type": "application/json"
        },
        "bodyFileName": "user-400-validation.json"
    }
}